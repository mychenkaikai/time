import { getCollection } from 'astro:content';

// è·å–æ‰€æœ‰å·²å‘å¸ƒçš„æ–‡ç« 
const allPosts = await getCollection('posts', ({ data }) => {
  return data.draft !== true;
});

// æŒ‰åˆ†ç±»ç»„ç»‡æ–‡ç« 
interface CategoryStructure {
  [category: string]: {
    [subcategory: string]: Array<{
      slug: string;
      title: string;
      date: Date;
    }>;
  };
}

const categoryStructure: CategoryStructure = {};

allPosts.forEach((post) => {
  const category = post.data.category;
  const subcategory = post.data.subcategory || 'æœªåˆ†ç±»';
  
  if (!categoryStructure[category]) {
    categoryStructure[category] = {};
  }
  
  if (!categoryStructure[category][subcategory]) {
    categoryStructure[category][subcategory] = [];
  }
  
  categoryStructure[category][subcategory].push({
    slug: post.slug,
    title: post.data.title,
    date: post.data.date,
  });
});

// å¯¹æ¯ä¸ªå­åˆ†ç±»çš„æ–‡ç« æŒ‰æ—¥æœŸæ’åº
Object.keys(categoryStructure).forEach((category) => {
  Object.keys(categoryStructure[category]).forEach((subcategory) => {
    categoryStructure[category][subcategory].sort((a, b) => 
      b.date.getTime() - a.date.getTime()
    );
  });
});

interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;
