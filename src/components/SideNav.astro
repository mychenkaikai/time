  <div class="side-nav-header">
    <h3>ğŸ“‘ æ–‡ç« å¯¼èˆª</h3>
  </div>
  
  <div class="side-nav-content">
    {Object.entries(categoryStructure).map(([category, subcategories]) => (
      <div class="category-group">
        <div class="category-title">
          ğŸ“ {category}
        </div>
        
        <div class="subcategory-list">
          {Object.entries(subcategories).map(([subcategory, posts]) => (
            <details class="subcategory-item" open>
              <summary class="subcategory-title">
                ğŸ“‚ {subcategory} ({posts.length})
              </summary>
              
              <ul class="post-list">
                {posts.map((post) => (
                  <li class="post-item">
                    <a 
                      href={`/posts/${post.slug}`}
                      class:list={['post-link', { active: currentSlug === post.slug }]}
                    >
                      ğŸ“„ {post.title}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          ))}
        </div>
      </div>
    ))}
  </div>
</aside>

