---
/**
 * WindowFrame - 可复用的窗口框架组件
 * 模拟 Windows 98 风格的窗口外壳 (基于 98.css)
 */

interface Props {
  title: string;
  closable?: boolean;
}

const { title, closable = false } = Astro.props;
---

<div class="window">
  <div class="title-bar">
    <div class="title-bar-text">{title}</div>
    <div class="title-bar-controls">
      {closable && (
        <button aria-label="Close"></button>
      )}
    </div>
  </div>
  <div class="window-body">
    <slot />
  </div>
</div>

<style>
  .window {
    margin-bottom: var(--spacing-lg);
    width: 100%;
  }
</style>
