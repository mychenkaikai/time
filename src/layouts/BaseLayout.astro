---
/**
 * BaseLayout - 基础 HTML 骨架
 * 包含 SEO、meta 标签、全局样式引入
 */

import ThemeSelector from '../components/ThemeSelector.astro';
import CRTOverlay from '../components/CRTOverlay.astro';
import MobileWarning from '../components/MobileWarning.astro';

interface Props {
  title: string;
  description?: string;
  theme?: 'retro-web' | 'win98' | 'winxp' | 'macos9' | 'web1';
}

const { 
  title, 
  description = '怀旧数字博物馆 - 为高敏人群打造的精神角落',
  theme = 'retro-web'
} = Astro.props;

import '../styles/variables.css';
import '../styles/global.css';
import '../styles/scrollbar.css';
import '../styles/themes/retro-web.css';
import '../styles/themes/win98.css';
import '../styles/themes/winxp.css';
import '../styles/themes/macos9.css';

const fullTitle = `${title} | 怀旧数字博物馆`;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="zh-CN" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site || Astro.url.origin)} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="怀旧数字博物馆" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href={`${baseUrl}icons/favicon.ico`} />
    
    <!-- 主题切换脚本（避免闪烁） -->
    <script is:inline>
      // 在页面加载前应用保存的主题，默认为 retro-web
      const savedTheme = localStorage.getItem('theme') || 'retro-web';
      document.documentElement.setAttribute('data-theme', savedTheme);
    </script>
  </head>
  <body>
    <MobileWarning />
    <CRTOverlay />
    <div class="container">
      <slot />
      
      <footer style="margin-top: 50px; text-align: center; padding-bottom: 20px; display: flex; flex-direction: column; align-items: center; gap: 10px;">
        <ThemeSelector />
        <p style="font-size: 12px; opacity: 0.7;">© 2024 Retro Digital Museum</p>
      </footer>
    </div>
  </body>
</html>
