---
/**
 * BaseLayout - 基础 HTML 骨架
 * 包含 SEO、meta 标签、全局样式引入
 */

import '98.css';
import ThemeSelector from '../components/ThemeSelector.astro';
import CRTOverlay from '../components/CRTOverlay.astro';
import SearchModal from '../components/SearchModal.astro';

interface Props {
  title: string;
  description?: string;
  theme?: 'web1' | 'win98' | 'winxp' | 'macos9';
}

const { 
  title, 
  description = '怀旧数字博物馆 - 为高敏人群打造的精神角落',
  theme = 'web1'
} = Astro.props;

const fullTitle = `${title} | 怀旧数字博物馆`;
---

<!DOCTYPE html>
<html lang="zh-CN" data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site || Astro.url.origin)} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="怀旧数字博物馆" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/icons/favicon.ico" />
    
    <!-- 样式 -->
    <link rel="stylesheet" href="/src/styles/variables.css" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="stylesheet" href="/src/styles/scrollbar.css" />
    
    <!-- 主题切换脚本（避免闪烁） -->
    <script is:inline>
      // 在页面加载前应用保存的主题
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme) {
        document.documentElement.setAttribute('data-theme', savedTheme);
      }
    </script>
  </head>
  <body>
    <CRTOverlay />
    <div class="container">
      <slot />
      
      <footer style="margin-top: 50px; text-align: center; padding-bottom: 20px; display: flex; flex-direction: column; align-items: center; gap: 10px;">
        <ThemeSelector />
        <p style="font-size: 12px; opacity: 0.7;">© 2024 Retro Digital Museum</p>
      </footer>
    </div>
  </body>
</html>
